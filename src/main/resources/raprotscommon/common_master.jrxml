<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
  name="common_master" pageWidth="595" pageHeight="842" columnWidth="535"
  leftMargin="30" rightMargin="30" topMargin="20" bottomMargin="20"
  uuid="11111111-1111-1111-1111-111111111111">

  <parameter name="P_TITLE" class="java.lang.String"/>
  <parameter name="P_SUBREPORT" class="net.sf.jasperreports.engine.JasperReport"/>
  <parameter name="P_SUBREPORT_PARAMS" class="java.util.Map"/>

  <!-- Ortak header -->
  <pageHeader>
    <band height="60">
      <staticText>
        <reportElement x="0" y="0" width="300" height="20"/>
        <textElement><font size="12" isBold="true"/></textElement>
        <text><![CDATA[Ürün Takip Sistemi]]></text>
      </staticText>
      <textField>
        <reportElement x="0" y="24" width="535" height="20"/>
        <textElement textAlignment="Center"><font size="14" isBold="true"/></textElement>
        <textFieldExpression><![CDATA[$P{P_TITLE}]]></textFieldExpression>
      </textField>
      <line>
        <reportElement x="0" y="55" width="535" height="1"/>
      </line>
    </band>
  </pageHeader>

  <!-- Subreport alanı -->
  <detail>
    <band height="20">
      <subreport>
        <reportElement x="0" y="0" width="535" height="20"/>
        <parametersMapExpression><![CDATA[$P{P_SUBREPORT_PARAMS}]]></parametersMapExpression>
        <connectionExpression><![CDATA[$P{REPORT_CONNECTION}]]></connectionExpression>
        <subreportExpression><![CDATA[$P{P_SUBREPORT}]]></subreportExpression>
      </subreport>
    </band>
  </detail>

  <!-- Ortak footer -->
  <pageFooter>
    <band height="20">
      <textField>
        <reportElement x="0" y="0" width="200" height="18"/>
        <textElement><font size="8"/></textElement>
        <textFieldExpression><![CDATA[new java.text.SimpleDateFormat("yyyy-MM-dd HH:mm").format(new java.util.Date())]]></textFieldExpression>
      </textField>
      <textField>
        <reportElement x="335" y="0" width="200" height="18"/>
        <textElement textAlignment="Right"><font size="8"/></textElement>
        <textFieldExpression><![CDATA["Sayfa " + $V{PAGE_NUMBER}]]></textFieldExpression>
      </textField>
    </band>
  </pageFooter>
</jasperReport>
